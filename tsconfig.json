{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020"],
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "types": ["node"]
  },
  "include": [
    "server.ts",
    "api/**/*.ts",
    "lib/**/*.ts",
    "types/**/*.ts",
    "constants/**/*.ts",
    "scripts/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts",
    "**/__tests__/**",
    "app/**/*",
    "webapp/**/*",
    "components/**/*",
    "playwright.config.ts",
    "tailwind.config.ts",
    "postcss.config.mjs",
    "jest.config.js",
    "jest.setup.js"
  ]
}
